<div class="card col-lg-7">

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
      <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <% if !animal.image2.file.nil? %>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <% end %>
          <% if !animal.image3.file.nil? %>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <% end %>
      </ol>
      <div class="carousel-inner">
          <div class="carousel-item active">
              <img class="bd-placeholder-img bd-placeholder-img-lg d-block w-100 img-thumbnail" width="800" height="400" src="<%= animal.image %>" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: First slide"><title>Placeholder</title><rect width="100%" height="100%" fill="#777"/><text x="50%" y="50%" fill="#555" dy=".3em"></text></img>
          </div>
          <% if !animal.image2.file.nil? %>
              <div class="carousel-item">
                  <img class="bd-placeholder-img bd-placeholder-img-lg d-block w-100 img-thumbnail" width="800" height="400" src="<%= animal.image2 %>" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Second slide"><title>Placeholder</title><rect width="100%" height="100%" fill="#666"/><text x="50%" y="50%" fill="#444" dy=".3em"></text></img>
              </div>
          <% end %>
          <% if !animal.image3.file.nil? %>
              <div class="carousel-item">
                  <img class="bd-placeholder-img bd-placeholder-img-lg d-block w-100 img-thumbnail" width="800" height="400" src="<%= animal.image3 %>" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Third slide"><title>Placeholder</title><rect width="100%" height="100%" fill="#555"/><text x="50%" y="50%" fill="#333" dy=".3em"></text></img>
              </div>
          <% end %>
      </div>
      <% if animal.image2.file.nil? && animal.image3.file.nil? %>
          <% else %>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="">前</span>
          </a>
      <% end %>
      <% if animal.image2.file.nil? && animal.image3.file.nil? %>
          <% else %>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="">次</span>
          </a>
      <% end %>
  </div>
  <div class="card-body">
      <h4 class="card-title"><%= animal.species%></h4>
      <h5 class="card-text"><%= animal.sex %></h5>
      <p class="card-text"><%= simple_format(animal.body) %></p><br>
      <% if animal.price %>
            <p class="price h4"><%= animal.price.to_s(:delimited, delimiter: ',') %>円</p>
        <% else %>
            <p class="price h4">￥ASK</p>
        <% end %>
      <p class="card-text"><%= animal.user.name %></p>
      <div class="record">
          <% if animal.updated_at != animal.created_at %>
              <p>編集日: <%= animal.updated_at.to_s(:datetime_jp) %><br>
          <% end %>
              作成日: <%= animal.created_at.to_s(:datetime_jp)%></p>
      </div>
  </div>
</div>
