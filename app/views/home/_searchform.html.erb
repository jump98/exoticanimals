<div class="search-form">
  <%= form_with(scope: :search, url: root_path, method: :get, local: true) do |f| %>
    <div class="field">
        <%= f.label(:species, "種類") %>
        <%= f.text_field :species, value: @search_params[:species] %>
    </div>

    <div class="field">
        <%= f.label(:sex, "性別") %>
        <%= f.radio_button :sex, "オス" %>
        <%= f.label :sex, "オス", {value: @search_params[:sex], style: "display: inline-block;"} %>
        <%= f.radio_button :sex, "メス" %>
        <%= f.label :sex, "メス", {value: @search_params[:sex], style: "display: inline-block;"} %>
        <%= f.radio_button :sex, "性別不明" %>
        <%= f.label :sex, "不明", {value: @search_params[:sex], style: "display: inline-block;"} %>
    </div>

    <div class="field">
        <%= f.label(:body, "本文") %>
        <%= f.text_field :body, value: @search_params[:body] %>
    </div>
    

    <div class="actions">
        <%= f.submit('検索') %>
    </div>
  <% end %>
</div>
<%
=begin
%>
<table>
  <thead>
  <tr>
    <th>種類</th>
    <th>性別</th>
    <th>金額</th>
    <th>本文</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @animals.each do |animal| %>
    <tr>
      <td><%= animal.species %></td>
      <td><%= animal.sex %></td>
      <td><%= animal.price %></td>
      <td><%= animal.body %></td>
      <td><%= link_to 'Show', animal %></td>
    </tr>
  <% end %>
  </tbody>
</table>
